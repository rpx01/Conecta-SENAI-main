FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=conecta_senai.main
PORT=8080

# Segurança
SECRET_KEY=dev-secret-change-me
SECURITY_PASSWORD_SALT=dev-salt-change-me
COOKIE_SECURE=0
COOKIE_SAMESITE=Lax

# Banco de dados
DATABASE_URL=postgresql+psycopg2://conecta:conecta@db:5432/conecta_senai

# Redis e rate limiting
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
RATELIMIT_STORAGE_URI=${REDIS_URL}
DISABLE_REDIS=0

# Admin inicial
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123
ADMIN_USERNAME=admin

# URLs públicas
FRONTEND_BASE_URL=http://localhost:8080
APP_BASE_URL=http://localhost:8080

# Observabilidade e logs
APP_ENV=dev
APP_RELEASE=
LOG_LEVEL=INFO
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_RESOURCE_ATTRIBUTES=service.name=conecta-senai

# Recaptcha (opcional)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
RECAPTCHA_THRESHOLD=0.5

# Emails (Resend)
MAIL_FROM=no-reply@example.com
RESEND_API_KEY=
RESEND_FROM=no-reply@example.com
RESEND_REPLY_TO=

# Tarefas agendadas
SCHEDULER_ENABLED=0
NOTIFICACAO_INTERVALO_MINUTOS=60
