# Flask / runtime
FLASK_APP=conecta_senai.main
FLASK_ENV=development
FLASK_DEBUG=1
PORT=8080
APP_ENV=dev
APP_RELEASE=local
LOG_LEVEL=INFO

# Security
SECRET_KEY=dev-secret-key-change-me
SECURITY_PASSWORD_SALT=dev-salt-change-me
COOKIE_SECURE=0
COOKIE_SAMESITE=Lax

# Database (PostgreSQL for Docker Compose)
POSTGRES_USER=conecta
POSTGRES_PASSWORD=conecta
POSTGRES_DB=conecta
DATABASE_URL=postgresql://conecta:conecta@db:5432/conecta

# Redis / Rate limiting
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
RATELIMIT_STORAGE_URI=redis://redis:6379/0
DISABLE_REDIS=0

# Scheduler
SCHEDULER_ENABLED=0
NOTIFICACAO_INTERVALO_MINUTOS=60

# Admin bootstrap (used on startup to ensure an admin user exists)
ADMIN_EMAIL=admin@local.dev
ADMIN_PASSWORD=change-me-please
ADMIN_USERNAME=admin

# URLs
FRONTEND_BASE_URL=http://localhost:${PORT}
APP_BASE_URL=http://localhost:${PORT}

# Email (Resend)
RESEND_API_KEY=
RESEND_FROM=no-reply@example.com
RESEND_REPLY_TO=
MAIL_FROM=

# Observability
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_RESOURCE_ATTRIBUTES=service.name=conecta-senai,service.environment=local

# reCAPTCHA
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
RECAPTCHA_THRESHOLD=0.5
